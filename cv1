    <script>
        function toggleSkills() {
            const skillsList = document.getElementById('skills-list');
            const toggleBtn = document.querySelector('.toggle-btn');
            
            if (skillsList.style.display === 'none') {
                skillsList.style.display = 'block';
                toggleBtn.innerHTML = '<i class="fas fa-code"></i> Yetenekleri Gizle';
            } else {
                skillsList.style.display = 'none';
                toggleBtn.innerHTML = '<i class="fas fa-code"></i> Yetenekleri Göster';
            }
        }
        
        // Sayfa yüklendiğinde yetenekleri gizle
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('skills-list').style.display = 'none';
        });
    </script>
